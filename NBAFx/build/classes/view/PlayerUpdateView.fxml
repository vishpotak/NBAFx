<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>	
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?> 
<?import javafx.geometry.*?>

<VBox fx:controller="controller.PlayerUpdateController" 
    alignment="CENTER" styleClass="background" prefHeight="400.0" prefWidth="600.0" spacing="20" 
      xmlns:fx="http://javafx.com/fxml/1"  >
    <padding>
        <Insets top="10" bottom="10" left="5" right="5" />
    </padding>
    
    <Label text="Player Details" styleClass="label-header"/>
    
    <GridPane alignment="CENTER">
            <Label text="Player Name: "     GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="newNameTf"    GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Player Credit: "   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="newCreditTf"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Player Age: "      GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="newAgeTf"     GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label text="Player No: "       GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="newNoTf"      GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
    
    <HBox alignment="CENTER">
       <Button fx:id="updateBtn"    text="Update"   onAction="#updatePlayer" disable="false"/>
       <Button fx:id="addBtn"       text="Add"      onAction="#addPlayer"    disable="false"/>
       <Button fx:id="closeBtn"     text="Close"    onAction="#close"/>
    </HBox>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>

